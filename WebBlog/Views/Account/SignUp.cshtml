@model WebBlog.Models.SignUp

@{
    ViewData["Title"] = "Sign Up";
}

<!-- Username already exist -->
@if (!string.IsNullOrEmpty(ViewBag.UsernameExist))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @ViewBag.UsernameExist
    </div>
}

<!-- Username that not allow to use -->
@if (!string.IsNullOrEmpty(ViewBag.UsernameNotAllow))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @ViewBag.UsernameNotAllow
    </div>
}

<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                            <form class="mx-1 mx-md-4" asp-action="SignUp" method="post">

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="@Model.Username" class="form-control" />
                                        <label asp-for="@Model.Username" class="form-label">Username</label><br />
                                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="@Model.Password" class="form-control" type="password" />
                                        <label asp-for="@Model.Password" class="form-label">Password</label><br />
                                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
                                        <label asp-for="@Model.ConfirmPassword" class="form-label">Repeat your password</label><br />
                                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <label class="form-check-label">
                                        Read Privacy before sign up <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <input type="submit" class="btn btn-primary btn-lg" value="Sign Up" />
                                </div>

                            </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                 class="img-fluid" alt="Sample image">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
